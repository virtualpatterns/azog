    {
      "type": "node",
      "request": "launch",
      "name": "Launch Test",
      "program": "${workspaceFolder}/node_modules/.bin/_mocha",
      "preLaunchTask": "Build",
      "args": [
        "--bail", 
        "--timeout", "0",
        "${workspaceFolder}/distributable/test/index.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Video",
      "program": "${workspaceFolder}/distributable/command/index.js",
      "preLaunchTask": "Build",
      "args": [
        "--logLevel", "trace",
        "--logPath", "/Users/fficnar/Library/Logs/azog/azog.log",
        "--downloadedPath", "resource/deluge/downloaded",
        "--processingPath", "resource/deluge/processing",
        "--processedPath", "resource/deluge/processed",
        "--failedPath", "resource/deluge/failed",
        "completed", "0001", "Laughtertainment - Short funny video.mp4"
    ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
