  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Test",
      "program": "${workspaceFolder}/node_modules/.bin/_mocha",
      "preLaunchTask": "Build",
      "args": [
        "--bail", 
        "--timeout", "0",
        "${workspaceFolder}/distributable/test/index.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Process w/ Invalid",
      "program": "${workspaceFolder}/distributable/index.js",
      "preLaunchTask": "Build",
      "args": [
        "process",
        "--configurationPath", "${workspaceFolder}/resource/deluge/configuration.json",
        "--logLevel", "debug", "--logPath", "${env:HOME}/Library/Logs/azog/azog.log",
        "0", "0", "0"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Process w/ ...",
      "program": "${workspaceFolder}/distributable/index.js",
      "preLaunchTask": "Build",
      "args": [
        "process",
        "--configurationPath", "${workspaceFolder}/resource/deluge/configuration.json",
        "--logLevel", "debug", "--logPath", "${env:HOME}/Library/Logs/azog/azog.log",
        "0", "Star.Trek.Discovery.S02E00.Short.Treks.Calypso.iNTERNAL.1080p.WEB.x264-W4F[rarbg]", "${workspaceFolder}/resource/deluge/downloaded"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Transfer",
      "program": "${workspaceFolder}/distributable/index.js",
      "preLaunchTask": "Build",
      "args": [
        "transfer",
        "--configurationPath", "${workspaceFolder}/resource/deluge/configuration.json",
        "--logLevel", "trace", "--logPath", "${env:HOME}/Library/Logs/azog/azog.log"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Select",
      "program": "${workspaceFolder}/distributable/index.js",
      "preLaunchTask": "Build",
      "args": [
        "select",
        "--configurationPath", "${workspaceFolder}/resource/deluge/configuration.json",
        "--logLevel", "trace", "--logPath", "${env:HOME}/Library/Logs/azog/azog.log"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}