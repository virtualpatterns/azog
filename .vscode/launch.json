  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Test",
      "program": "${workspaceFolder}/node_modules/.bin/_mocha",
      "preLaunchTask": "Build",
      "args": [
        "--bail", 
        "--timeout",
        "0",
        "${workspaceFolder}/distributable/test/index.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Command",
      "program": "${workspaceFolder}/distributable/command/index.js",
      "preLaunchTask": "Build",
      "args": [
        "completed",
        "0",
        "Young Sheldon - 2x02 - A Rival Prodigy and Sir Isaac Neutron.mkv"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}